@model IEnumerable<ProxyServices.Dto.Usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Tabla Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo Usuario", "Create", null, new { @class = "btn btn-sm btn-primary" })
</p>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <br />
    @if (ViewBag.codeError != null)
    {
        if (ViewBag.codeError == "0")
        {
            <div class="panel bg-success" id="panelerror">
                <div class="panel-heading " id="errores">
                    <span id="Mensaje_Error" class="glyphicon glyphicon-exclamation-sign"></span> @ViewBag.Message
                </div>
            </div>
        }
        else
        {
            <div class="panel bg-warning" id="panelerror">
                <div class="panel-heading " id="errores">
                    <span id="Mensaje_Error" class="glyphicon glyphicon-exclamation-sign"></span> @ViewBag.Message
                </div>
            </div>
        }
    }
</div>
<table class="table table-striped table-sm">
    <tr>
        <th>Nombre</th>
        <th>Fecha Nacimiento</th>
        <th>Sexo</th>
        <th>Acción</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
            <td>@item.Sexo</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Usuario }, new { @class = "btn btn-sm btn-success" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Usuario }, new { @class = "btn btn-sm btn-warning" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Usuario }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>
